@page
@using HotelManagement.Models
@model HotelManagement.Pages.Quartos.DetailsModel

@{
    ViewData["Title"] = "Detalhes do Quarto";
}

<h1><i class="fas fa-bed me-2"></i>Detalhes do Quarto</h1>

<!-- INFORMAÇÕES DO QUARTO -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="fas fa-door-open me-2"></i>Informações do Quarto</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Número do Quarto</dt>
            <dd class="col-sm-9">
                <span class="badge bg-dark fs-2">
                    <i class="fas fa-door-closed me-2"></i>@Model.Quarto.QuartoID
                </span>
            </dd>

            <dt class="col-sm-3">Tipo de Quarto</dt>
            <dd class="col-sm-9">
                <h4 class="text-primary">
                    <i class="fas fa-star me-2"></i>@Model.Quarto.TipoQuarto
                </h4>
            </dd>

            <dt class="col-sm-3">Capacidade</dt>
            <dd class="col-sm-9">
                <span class="badge bg-info fs-5">
                    <i class="fas fa-users me-2"></i>Até @Model.Quarto.Capacidade pessoas
                </span>
            </dd>

            <dt class="col-sm-3">Preço por Noite</dt>
            <dd class="col-sm-9">
                <span class="badge bg-success fs-3">
                    <i class="fas fa-euro-sign me-2"></i>@Model.Quarto.PrecoPorNoite.ToString("N2") €
                </span>
            </dd>

            <dt class="col-sm-3">Status Atual</dt>
            <dd class="col-sm-9">
                @switch (Model.Quarto.Status)
                {
                    case StatusQuarto.Disponivel:
                        <span class="badge bg-success fs-5">
                            <i class="fas fa-check-circle me-2"></i>Disponível
                        </span>
                        break;
                    case StatusQuarto.Ocupado:
                        <span class="badge bg-danger fs-5">
                            <i class="fas fa-user-check me-2"></i>Ocupado
                        </span>
                        break;
                    case StatusQuarto.Manutencao:
                        <span class="badge bg-warning fs-5">
                            <i class="fas fa-tools me-2"></i>Em Manutenção
                        </span>
                        break;
                    case StatusQuarto.Limpeza:
                        <span class="badge bg-info fs-5">
                            <i class="fas fa-broom me-2"></i>Em Limpeza
                        </span>
                        break;
                }
            </dd>

            @if (!string.IsNullOrEmpty(Model.Quarto.Descricao))
            {
                <dt class="col-sm-3">Descrição</dt>
                <dd class="col-sm-9">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>@Model.Quarto.Descricao
                    </div>
                </dd>
            }
        </dl>
    </div>
</div>

<!-- RESUMO DE CARACTERÍSTICAS -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card text-center shadow-sm h-100 border-0 bg-primary text-white">
            <div class="card-body">
                <i class="fas fa-door-closed fa-3x mb-3"></i>
                <h3 class="fw-bold">@Model.Quarto.QuartoID</h3>
                <p class="mb-0">Número</p>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card text-center shadow-sm h-100 border-0 bg-success text-white">
            <div class="card-body">
                <i class="fas fa-star fa-3x mb-3"></i>
                <h5 class="fw-bold">@Model.Quarto.TipoQuarto</h5>
                <p class="mb-0">Tipo</p>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card text-center shadow-sm h-100 border-0 bg-info text-white">
            <div class="card-body">
                <i class="fas fa-users fa-3x mb-3"></i>
                <h3 class="fw-bold">@Model.Quarto.Capacidade</h3>
                <p class="mb-0">Pessoas</p>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card text-center shadow-sm h-100 border-0 bg-warning text-dark">
            <div class="card-body">
                <i class="fas fa-euro-sign fa-3x mb-3"></i>
                <h4 class="fw-bold">@Model.Quarto.PrecoPorNoite.ToString("N2") €</h4>
                <p class="mb-0">Por Noite</p>
            </div>
        </div>
    </div>
</div>

<!-- RESERVAS DO QUARTO -->
@if (Model.Quarto.Reservas != null && Model.Quarto.Reservas.Any())
{
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Reservas deste Quarto</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-user me-1"></i>Cliente</th>
                            <th><i class="fas fa-calendar-check me-1"></i>Check-in</th>
                            <th><i class="fas fa-calendar-times me-1"></i>Check-out</th>
                            <th><i class="fas fa-moon me-1"></i>Noites</th>
                            <th><i class="fas fa-info-circle me-1"></i>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reserva in Model.Quarto.Reservas.OrderByDescending(r => r.DataCheckIn))
                        {
                            <tr>
                                <td>@reserva.Cliente.NomeCompleto</td>
                                <td>@reserva.DataCheckIn.ToString("dd/MM/yyyy")</td>
                                <td>@reserva.DataCheckOut.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge bg-info">@reserva.NumeroNoites</span>
                                </td>
                                <td>
                                    @switch (reserva.Status)
                                    {
                                        case StatusReserva.Confirmada:
                                            <span class="badge bg-success">Confirmada</span>
                                            break;
                                        case StatusReserva.Pendente:
                                            <span class="badge bg-warning">Pendente</span>
                                            break;
                                        case StatusReserva.Cancelada:
                                            <span class="badge bg-danger">Cancelada</span>
                                            break;
                                        case StatusReserva.CheckInRealizado:
                                            <span class="badge bg-info">Check-in</span>
                                            break;
                                        case StatusReserva.CheckOutRealizado:
                                            <span class="badge bg-secondary">Check-out</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <a asp-page="/Reservas/Details" asp-route-id="@reserva.ReservaID"
                                        class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Este quarto ainda não possui reservas registadas.
    </div>
}

<!-- BOTÕES DE AÇÃO -->
<div class="d-flex gap-2 mb-4">
    <a asp-page="./Edit" asp-route-id="@Model.Quarto.QuartoID" class="btn btn-warning">
        <i class="fas fa-edit me-2"></i>Editar Quarto
    </a>
    <a asp-page="./Delete" asp-route-id="@Model.Quarto.QuartoID" class="btn btn-danger">
        <i class="fas fa-trash me-2"></i>Apagar Quarto
    </a>
    <a asp-page="./Index" class="btn btn-secondary ms-auto">
        <i class="fas fa-arrow-left me-2"></i>Voltar à Lista
    </a>
</div>