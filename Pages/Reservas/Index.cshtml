@page
@using HotelManagement.Models
@model HotelManagement.Pages.Reservas.IndexModel

@{
    ViewData["Title"] = "Lista de Reservas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-calendar-alt me-2"></i>Reservas</h1>
    <a asp-page="Create" class="btn btn-primary btn-lg">
        <i class="fas fa-plus me-2"></i>Nova Reserva
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<hr />

<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Quarto</th>
                        <th>Cliente</th>
                        <th>Check-in</th>
                        <th>Check-out</th>
                        <th>Noites</th>
                        <th>Hóspedes</th>
                        <th>Valor Total</th>
                        <th>Status</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Reservas != null && Model.Reservas.Any())
                    {
                        @foreach (var item in Model.Reservas)
                        {
                            <tr>
                                <td><strong>#@item.ReservaID</strong></td>
                                <td>
                                    <i class="fas fa-bed text-primary me-1"></i>
                                    Quarto @item.QuartoID
                                </td>
                                <td>
                                    <i class="fas fa-user text-info me-1"></i>
                                    @item.Cliente?.NomeCompleto
                                </td>
                                <td>@item.DataCheckIn.ToString("dd/MM/yyyy")</td>
                                <td>@item.DataCheckOut.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge bg-secondary">
                                        @item.NumeroNoites noite(s)
                                    </span>
                                </td>
                                <td>
                                    <i class="fas fa-users text-muted me-1"></i>
                                    @item.NumeroHospedes
                                </td>
                                <td>
                                    <strong class="text-success">€@item.ValorTotal.ToString("F2")</strong>
                                </td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case StatusReserva.Pendente:
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock me-1"></i>Pendente
                                            </span>
                                            break;
                                        case StatusReserva.Confirmada:
                                            <span class="badge bg-info">
                                                <i class="fas fa-check me-1"></i>Confirmada
                                            </span>
                                            break;
                                        case StatusReserva.CheckInRealizado:
                                            <span class="badge bg-primary">
                                                <i class="fas fa-door-open me-1"></i>Check-in
                                            </span>
                                            break;
                                        case StatusReserva.CheckOutRealizado:
                                            <span class="badge bg-success">
                                                <i class="fas fa-door-closed me-1"></i>Check-out
                                            </span>
                                            break;
                                        case StatusReserva.Cancelada:
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>Cancelada
                                            </span>
                                            break;
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Details" asp-route-id="@item.ReservaID" 
                                           class="btn btn-sm btn-outline-info" title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-page="./Edit" asp-route-id="@item.ReservaID" 
                                           class="btn btn-sm btn-outline-warning" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@item.ReservaID" 
                                           class="btn btn-sm btn-outline-danger" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center py-5">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Nenhuma reserva cadastrada.</p>
                                <a asp-page="Create" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Criar primeira reserva
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="card border-0 bg-primary text-white shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-calendar-check me-2"></i>Total Reservas
                    </h5>
                    <h2 class="mb-0">@Model.Reservas?.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 bg-warning text-dark shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-clock me-2"></i>Pendentes
                    </h5>
                    <h2 class="mb-0">@Model.Reservas?.Count(r => r.Status == StatusReserva.Pendente)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 bg-info text-white shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-check me-2"></i>Confirmadas
                    </h5>
                    <h2 class="mb-0">@Model.Reservas?.Count(r => r.Status == StatusReserva.Confirmada)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 bg-success text-white shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-euro-sign me-2"></i>Receita Total
                    </h5>
                    <h2 class="mb-0">€@Model.Reservas?.Sum(r => r.ValorTotal).ToString("F2")</h2>
                </div>
            </div>
        </div>
    </div>
</div>