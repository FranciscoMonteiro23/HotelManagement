@page
@model HotelManagement.Pages.Reservas.CreateModel

@{
    ViewData["Title"] = "Nova Reserva";
}

<h1><i class="fas fa-calendar-plus me-2"></i>Nova Reserva</h1>

<hr />

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- INFORMAÇÕES DO QUARTO E CLIENTE -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informações Básicas</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Reserva.QuartoID" class="form-label">Quarto</label>
                            <select asp-for="Reserva.QuartoID" class="form-select"
                                asp-items="@(ViewData["QuartoID"] as SelectList)">
                                <option value="">-- Selecione o Quarto --</option>
                            </select>
                            <span asp-validation-for="Reserva.QuartoID" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Reserva.ClienteID" class="form-label">Cliente</label>
                            <select asp-for="Reserva.ClienteID" class="form-select"
                                asp-items="@(ViewData["ClienteID"] as SelectList)">
                                <option value="">-- Selecione o Cliente --</option>
                            </select>
                            <span asp-validation-for="Reserva.ClienteID" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- DATAS DA RESERVA -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar me-2"></i>Datas da Reserva</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Reserva.DataCheckIn" class="form-label"></label>
                            <input asp-for="Reserva.DataCheckIn" class="form-control" type="date" />
                            <span asp-validation-for="Reserva.DataCheckIn" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Reserva.DataCheckOut" class="form-label"></label>
                            <input asp-for="Reserva.DataCheckOut" class="form-control" type="date" />
                            <span asp-validation-for="Reserva.DataCheckOut" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- DETALHES DA RESERVA -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Detalhes da Reserva</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Reserva.NumeroHospedes" class="form-label"></label>
                            <input asp-for="Reserva.NumeroHospedes" class="form-control" type="number" min="1"
                                value="1" />
                            <span asp-validation-for="Reserva.NumeroHospedes" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Reserva.ValorTotal" class="form-label"></label>
                            <input asp-for="Reserva.ValorTotal" class="form-control" type="number" step="0.01"
                                placeholder="Calculado automaticamente" />
                            <span asp-validation-for="Reserva.ValorTotal" class="text-danger"></span>
                            <small class="text-muted">Deixe vazio para cálculo automático</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Reserva.Status" class="form-label"></label>
                        <select asp-for="Reserva.Status" class="form-select"
                            asp-items="@(ViewData["StatusReserva"] as SelectList)">
                            <option value="">-- Selecione o Status --</option>
                        </select>
                        <span asp-validation-for="Reserva.Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Reserva.Observacoes" class="form-label"></label>
                        <textarea asp-for="Reserva.Observacoes" class="form-control" rows="3"
                            placeholder="Observações adicionais (opcional)"></textarea>
                        <span asp-validation-for="Reserva.Observacoes" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- BOTÕES -->
            <div class="form-group d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save me-2"></i>Criar Reserva
                </button>
                <a asp-page="./Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times me-2"></i>Cancelar
                </a>
            </div>
        </form>
    </div>

    <!-- DICAS -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 bg-light">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-lightbulb me-2 text-warning"></i>Dicas
                </h5>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Verifique a disponibilidade do quarto
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Check-out deve ser após check-in
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Status "Pendente" para novas reservas
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        O valor será calculado automaticamente
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}