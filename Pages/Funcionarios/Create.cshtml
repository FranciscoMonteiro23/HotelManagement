@page
@using HotelManagement.Models
@model HotelManagement.Pages.Funcionarios.CreateModel

@{
    ViewData["Title"] = "Novo Funcionário";
}

<h1><i class="fas fa-user-plus me-2"></i>Novo Funcionário</h1>

<hr />

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- DADOS PESSOAIS -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>Dados Pessoais</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Funcionario.Nome" class="form-label"></label>
                            <input asp-for="Funcionario.Nome" class="form-control" />
                            <span asp-validation-for="Funcionario.Nome" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Funcionario.Apelido" class="form-label"></label>
                            <input asp-for="Funcionario.Apelido" class="form-control" />
                            <span asp-validation-for="Funcionario.Apelido" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Funcionario.Documento" class="form-label"></label>
                            <input asp-for="Funcionario.Documento" class="form-control" />
                            <span asp-validation-for="Funcionario.Documento" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Funcionario.Telefone" class="form-label"></label>
                            <input asp-for="Funcionario.Telefone" class="form-control" />
                            <span asp-validation-for="Funcionario.Telefone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Funcionario.Email" class="form-label"></label>
                        <input asp-for="Funcionario.Email" class="form-control" type="email" />
                        <span asp-validation-for="Funcionario.Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- DADOS PROFISSIONAIS -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-briefcase me-2"></i>Dados Profissionais</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Funcionario.Cargo" class="form-label"></label>
                            <select asp-for="Funcionario.Cargo" class="form-select"
                                asp-items="Html.GetEnumSelectList<CargoFuncionario>()">
                                <option value="">-- Selecione o Cargo --</option>
                            </select>
                            <span asp-validation-for="Funcionario.Cargo" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Funcionario.DataContratacao" class="form-label"></label>
                            <input asp-for="Funcionario.DataContratacao" class="form-control" type="date" />
                            <span asp-validation-for="Funcionario.DataContratacao" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ATRIBUIÇÃO DE SETORES -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-building me-2"></i>Atribuição de Setores</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">
                        <i class="fas fa-info-circle me-2"></i>
                        Selecione os setores onde este funcionário irá trabalhar:
                    </p>

                    @if (Model.AtribuicaoSetorDataList != null && Model.AtribuicaoSetorDataList.Any())
                    {
                        <div class="row">
                            @{
                                foreach (var setor in Model.AtribuicaoSetorDataList)
                                {
                                    <div class="col-md-6 mb-3">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" name="setoresSelecionados"
                                                value="@setor.SetorID" id="setor_@setor.SetorID" @(setor.Atribuido ? "checked" :
                                                                                                                                     "") />
                                            <label class="form-check-label" for="setor_@setor.SetorID">
                                                <strong>@setor.SetorID</strong> - @setor.NomeSetor
                                            </label>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Nenhum setor disponível. Por favor, crie setores primeiro em
                            <a asp-page="/Setores/Create" class="alert-link">Criar Setor</a>.
                        </div>
                    }
                </div>
            </div>

            <!-- BOTÕES -->
            <div class="form-group d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save me-2"></i>Criar Funcionário
                </button>
                <a asp-page="./Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times me-2"></i>Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}