@page
@model HotelManagement.Pages.Setores.IndexModel

@{
    ViewData["Title"] = "Setores";
}

<h1><i class="fas fa-building me-2"></i>Setores do Hotel</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="fas fa-plus-circle me-2"></i>Novo Setor
    </a>
</p>

<div class="row">
    @foreach (var item in Model.Setores)
    {
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-building me-2"></i>@item.NomeSetor
                        </h5>
                        <span class="badge bg-light text-dark fs-6">
                            ID: @item.SetorID
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        <i class="fas fa-info-circle me-2"></i>@item.Descricao
                    </p>

                    <div class="mb-3">
                        <span class="badge bg-success fs-6">
                            <i class="fas fa-users me-1"></i>
                            @item.NumeroFuncionarios Funcionários
                        </span>
                    </div>

                    @if (item.AtribuicaoSetores != null && item.AtribuicaoSetores.Any())
                    {
                        <hr>
                        <h6 class="text-primary mb-3">
                            <i class="fas fa-user-tie me-2"></i>Funcionários neste Setor:
                        </h6>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var atribuicao in item.AtribuicaoSetores)
                            {
                                <span class="badge bg-info">
                                    <i class="fas fa-user me-1"></i>
                                    @atribuicao.Funcionario.NomeCompleto
                                </span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Sem funcionários atribuídos
                        </div>
                    }
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-page="./Edit" asp-route-id="@item.SetorID" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit me-1"></i>Editar
                        </a>
                        <a asp-page="./Details" asp-route-id="@item.SetorID" class="btn btn-sm btn-info">
                            <i class="fas fa-eye me-1"></i>Detalhes
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.SetorID" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash me-1"></i>Apagar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Setores.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Nenhum setor cadastrado. Clique em "Novo Setor" para adicionar.
    </div>
}